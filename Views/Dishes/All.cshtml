@model List<Dish>;

<div class="container">
    <h3 class="text-center" >All Dishes</h3> 
    <p class="text-right "><a asp-controller="Dishes" asp-action="New">New Dish</a> </p>

</div>
<hr>
<div>
    
    <div class="card mx-auto text-center mb-3" style="">
        <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Chef</th>
                <th scope="col">Tastiness</th>
                <th scope="col">Calories</th>

            </tr>
        </thead>
        @foreach (Dish currentDish in Model)
        {
                <tbody>
                    <tr>
                        <td>@currentDish.Name</td>
                        <td>@currentDish.Chef.FullName()</td>
                        <td>@currentDish.Tastiness</td>
                        <td>@currentDish.Calories</td>

                    </tr>
                    
                </tbody>
        }
                </table>  

            </div>
        
</div>